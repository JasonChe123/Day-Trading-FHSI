#:kivy 2.1.0
#:set color_map {'bg': (1, 1, 1, 0.8)}


# buttons ---------------------------------------------------------------------
<RoundedButton@Button>:
    size: (100, 40)
    size_hint: (None, None)
    pos_hint: {'center_y': 0.5}
    background_color: (0, 0, 0, 0)
    canvas.before:
        Color:
            rgba: (0.2, 0.4, 0.2, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]

<IconButton@Button>:
    border: (0, 0, 0, 0)
    size: (80, 80)
    size_hint: (None, None)

<PageButton@BoxLayout>:
    orientation: 'vertical'
    size_hint: (0.2, 0.9)
    size: (0, 0)


# Label -----------------------------------------------------------------------
<Label>:
    color: 0, 0, 0, 1

<PageButtonLabel@Label>:
    size: self.texture_size
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}


# Carousel --------------------------------------------------------------------


# DataFrameTable --------------------------------------------------------------
<DataFrameTable@ScrollView>:


# DatePicker ------------------------------------------------------------------
<DatePicker>:
    pHint: 1.0, 0.5
<ArrowButton>:
    color: (1, 1, 1, 1)
<MonthYearLabel>:
    color: (1, 1, 1, 1)
<DayAbbrLabel>:
    color: (1, 1, 1, 1)
<DayAbbrWeekendLabel>:
    color: (1, 0.5, 0.5, 1)
<DayButton>:
    color: (1, 1, 1, 1)
<DayNumWeekendButton>:
    background_color: (1, 0.5, 0.5, 1)

# Spinner ---------------------------------------------------------------------
<MyOrderSpinnerOption@SpinnerOption>:
    size: 80, 30
    size_hint: None, None
    background_color: (0.5, 0.2, 0.2, 1) if self.text == 'Sell' else (0.3, 1, 0.3, 1) if self.text == 'Buy' else (0.3, 0.3, 0.3, 1) if self.text == 'PlsSelect' else (0.3, 0.5, 0.5, 1)
    color: (1, 1, 1, 1)

<OrderSpinner>:
    text: 'PlsSelect'
    values: ('Buy', 'Sell', 'Cover')
    size: 80, 30
    size_hint: None, None
    color: (1, 1, 1, 1)
    option_cls: 'MyOrderSpinnerOption'
