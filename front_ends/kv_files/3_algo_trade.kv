<AlgoTrade>:
    # --- main frame ---
    BoxLayout:
        orientation: 'vertical'
        size_hint: None ,None
        size: root.size
        spacing: 20

        # --- start, stop and cover all buttons ---
        BoxLayout:
            orientation: 'horizontal'
            size: 0, 0
            size_hint: 1.0, 0.15
            spacing: 20

            Widget:
            IconButton:
                size: 60, 60
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                background_normal: f'{app.proj_dir}/library/images/start_all_button_normal.png'
                background_down: f'{app.proj_dir}/library/images/start_all_button_down.png'
                on_press: root.start_all(self)

            IconButton:
                size: 60, 60
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                background_normal: f'{app.proj_dir}/library/images/stop_all_button_normal.png'
                background_down: f'{app.proj_dir}/library/images/stop_all_button_down.png'
                on_press: root.stop_all(self)

            IconButton:
                size: 60, 60
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                background_normal: f'{app.proj_dir}/library/images/cover_all_button_normal.png'
                background_down: f'{app.proj_dir}/library/images/cover_all_button_down.png'
                on_press: root.cover_all(self)
            Widget:

        # --- select date ---
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1.0, 0.1
            size: 0, 0
            spacing: 10

            Widget:
            Label:
                text: 'From'
                size: self.texture_size
                size_hint: (None, None)
                pos_hint: {'center_y': 0.5}

            Label:
                id: label_date_from
                size: self.texture_size
                size_hint: (None, None)
                font_size: 16
                pos_hint: {'center_y': 0.5}
                color: (0.4, 0.2, 0.7)

            IconButton:
                size: (40, 40)
                size_hint: (None, None)
                pos_hint: {'center_y': 0.5}
                background_normal: f'{app.proj_dir}/library/images/calendar.png'
                background_down: f'{app.proj_dir}/library/images/calendar.png'
                on_press: root.show_calendar('start')

            Label:
                text: 'to'
                size: self.texture_size
                size_hint: (None, None)
                pos_hint: {'center_y': 0.5}

            Label:
                id: label_date_to
                size: self.texture_size
                size_hint: (None, None)
                font_size: 16
                color: (0.4, 0.2, 0.7)
                pos_hint: {'center_y': 0.5}

            IconButton:
                size: (40, 40)
                size_hint: (None, None)
                pos_hint: {'center_y': 0.5}
                background_normal: f'{app.proj_dir}/library/images/calendar.png'
                background_down: f'{app.proj_dir}/library/images/calendar.png'
                on_press: root.show_calendar('end')

            IconButton:
                size: (40, 40)
                size_hint: (None, None)
                pos_hint: {'center_y': 0.5}
                background_normal: f'{app.proj_dir}/library/images/refresh_button_normal.png'
                background_down: f'{app.proj_dir}/library/images/refresh_button_down.png'
                on_press: root.refresh(self)
            Widget:

        # --- algo trade table ---
        DataFrameTable:
            size: root.size
            GridLayout:
                id: data_table
                size: (self.minimum_width, 0)
                size_hint: (None, 1.0)
                spacing: 1

        # --- realtime OHLC ---
        BoxLayout:
            orientation: 'horizontal'
            size: 0, 0
            size_hint: 1.0, 0.1
            spacing: 9
            Label:
                text: 'Open'
                color: (0.6, 0.3, 0.6, 1.0)
            Label:
                id: open
                text: '00000'
            Label:
                text: 'High'
                color: (0.6, 0.3, 0.6, 1.0)
            Label:
                id: high
                text: '00000'
            Label:
                text: 'Low'
                color: (0.6, 0.3, 0.6, 1.0)
            Label:
                id: low
                text: '00000'
            Label:
                text: 'Close'
                color: (0.6, 0.3, 0.6, 1.0)
            Label:
                id: close
                text: '00000'
                markup: True